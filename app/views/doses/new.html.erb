<div class="view">
<div class="container padded py-4">
  <h1 class="text-center">Add new dose</h1>
  <div class="row">
    <div class="form col-xs-12 col-md-6 col-md-offset-3">
  <%= simple_form_for([@cocktail, @dose]) do |f| %>
    <%= f.association :ingredient %>
    <%= f.input :description %>
    <%= f.submit "add an ingredient", class: "btn btn-outline-warning my-2 py-1 px-4 rounded-pill"%>
  <% end %>
        <div class="pad20 ml-4">
          <%= link_to "Back", cocktails_path, class: "btn btn-warning py-1 px-4 rounded-pill" %>
        </div>
    </div>
  </div>
</div>
</div>
