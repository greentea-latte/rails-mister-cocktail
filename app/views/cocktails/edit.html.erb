<div class="view">
<div class="container padded py-4">
  <h1 class="text-center">Edit cocktail</h1>
  <div class="row">
    <div class="form col-xs-12 col-md-6 col-md-offset-3">
        <%= simple_form_for(@cocktail) do |f| %>
          <%= f.label :name %>
          <%= f.text_field :name %>
          <%= f.input :photo%>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.label :recipe %>
          <%= f.text_area :recipe %>
          <%= f.submit "Submit", class: "btn btn-outline-info m-4 py-1 px-4 rounded-pill" %>
        <% end %>
        <div class="pad20 ml-4">
          <%= link_to "Back", cocktails_path, class: "btn btn-warning py-1 px-4 rounded-pill" %>
        </div>
    </div>
  </div>
</div>
</div>
