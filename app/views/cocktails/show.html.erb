  <div class="bg-white">
    <div class="edit-btn">
    <%= link_to "Edit", edit_cocktail_path, class: "btn btn-warning py-1 px-4 rounded-pill" %>

    </div>
    <div class="container">
      <div class="row d-flex justify-content-center py-4">

        <div class="col-3 m-2">
        <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
