        </ul>
        <% end %>
        <div class="btn-center d-flex justify-content-center">
         <button type="button" class="btn btn-outline-info rounded-pill py-1 px-4 my-2"><%= link_to "Add dose",  new_cocktail_dose_path(@cocktail) %></button>
         </div>
        </div>

        <div class="col-5 m-2">
          <h2 class='my-3'>description</h2>
          <p>
            <%= @cocktail.recipe %>
          </p>
          </div>
      </div>
    </div>
  </div>



